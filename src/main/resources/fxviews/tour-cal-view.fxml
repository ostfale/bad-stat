            <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#refresh" GridPane.rowIndex="1">
               <graphic>
                  <FontIcon iconLiteral="fa-refresh" iconSize="16" />
               </graphic>
               <GridPane.margin>
